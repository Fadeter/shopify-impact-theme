                    <div class="hero-image-pc-{{section.id}}">
                      {% if block.settings.image != blank %}
                        <img
                          src="{{  block.settings.image | img_url: 'master' }}"
                          alt=""
                          loading="lazy"
                        >
                      {% else %}
                        {{ 'product-3' | placeholder_svg_tag: 'placeholder-svg' }}
                      {% endif %}
                    </div>
                  {% endif %}
                {% endfor %}
              {% endfor %}
            </div>
          </div>
          <div class="hero-images-right-pc-{{section.id}}">
            <div class="hero-images-inner-pc-{{section.id}}">
              {% for i in (1..10) %}
                {% for block in section.blocks %}
                  {% if block.type == 'image_right' %}
                    <div class="hero-image-pc-{{section.id}}">
                      {% if block.settings.image != blank %}
                        <img
                          src="{{  block.settings.image | img_url: 'master' }}"
