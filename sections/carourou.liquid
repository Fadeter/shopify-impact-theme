<style>

  .section-pc-{{section.id}} {
    border-top: solid #000000 0px;
    border-bottom: solid #000000 0px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 0px;
    margin-bottom: 0px;
  }

  .section-pc-{{section.id}}-settings {
    margin: 0 auto;
    padding-top: 36px;
    padding-bottom: 0px;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .hero-body-pc-{{section.id}} {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 40px;
    align-items: center;
  }

  .hero-heading-pc-{{section.id}} {
    text-align: left;
  }
 

  .hero-heading-pc-{{section.id}} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    font-family: 'Radley';
    src: url('https://cdn.shopify.com/s/files/1/0908/1526/7164/files/Radley-Regular.woff2?v=1745428188') format('woff2');
    font-weight: normal;
    font-style: normal;    
    line-height: 130%;
    text-transform: unset;
  }

  .hero-text-pc-{{section.id}} {
    margin-top: 18px;
    text-align: left;
  }

  .hero-text-pc-{{section.id}} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    font-weight: {{ text_weight }};
    font-family: {{ text_font.family }}{% if text_font.fallback_families.size > 0 %}, {{ text_font.fallback_families }}{% endif %} !important;
    line-height: 170%;
    text-transform: unset;
  }

  .hero-button-pc-{{section.id}} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 30%;
    max-width: 250px;
    margin: 0;
    margin-top: 16px;
    font-size: {{ button_size_mobile }}px;
    color: {{ button_text_color }};
    line-height: 100%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: 16px 24px;
    border-radius: {{ button_border_radius }}px;
    transition: all 0.25s ease 0s;
    position: relative;
    font-weight: {{ button_weight }};
    z-index: 2;
    border: {{ button_border_width }}px {{ button_border_style }} {{ button_border_color }};
    background-color: {{ button_bg_color }};
  }

  .hero-images-wrapper-pc-{{section.id}} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 14px;
    height: 300px;
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
  }

  .hero-images-left-pc-{{section.id}},
  .hero-images-right-pc-{{section.id}} {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    flex-direction: column;
    gap: 20px;
  }

  .hero-images-inner-pc-{{section.id}} {
    display: flex;
    flex-direction: column;
    gap: 20px;
    width: 100%;
  }

  .hero-image-pc-{{section.id}} {
    border-radius: {{ image_border_radius }}px;
    border: {{ image_border_width }}px {{ image_border_style }} {{ image_border_color }};
    overflow-y: hidden;
  }

  .hero-image-pc-{{section.id}} img,
  .hero-image-pc-{{section.id}} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }






