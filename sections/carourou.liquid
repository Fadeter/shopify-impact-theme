<style>
  .hero-images-left-pc-{{section.id}} {
    animation: leftImagesAnimationpc-{{section.id}} {{ animation_speed }}s linear infinite alternate;
  }

  .hero-images-right-pc-{{section.id}} {
    animation: rightImagesAnimationpc-{{section.id}} {{ animation_speed }}s linear infinite alternate;
  }

  @keyframes leftImagesAnimationpc-{{section.id}} {
    0% {
      transform: translateY(0%);
    }
    50% {
      transform: translateY(-50%);
    }
  }

  @keyframes rightImagesAnimationpc-{{section.id}} {
    0% {
      transform: translateY(-50%);
    }
    50% {
      transform: translateY(0%);
    }
    100% {
      transform: translateY(-50%);
    }
  }
    {% if layout_enable_gradient_on_image == true %}
    .hero-images-gradient-pc-{{section.id}}.top{
        display: block !important;
        z-index: 2;
        position: absolute;
        width: 100%;
        background-image: linear-gradient({{layout_gradient_on_image}}, rgba(250, 235, 227, 0));
        top: -1px;
        bottom: auto;
        left: 0%;
        right: 0%;
        height: 140px;
    }
    .hero-images-gradient-pc-{{section.id}}.bottom{
        display: block !important;
        z-index: 2;
        position: absolute;
        width: 100%;
        background-image: linear-gradient(to top, rgba(250, 235, 227, 0), {{layout_gradient_on_image}});
        top: auto;
        bottom: -1px;
        left: 0%;
        right: 0%;
        height: 140px;
        transform: rotate(180deg);
    }
    {% endif %}
</style>

